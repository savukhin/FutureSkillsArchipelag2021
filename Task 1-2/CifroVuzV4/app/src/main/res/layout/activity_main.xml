<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kepler"
        android:text="@string/logo_III"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#B2B2B6"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="296dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kepler"
        android:text="@string/logo_I"
        android:textColor="#0366B4"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stinger"
        android:scaleX="0.97"
        android:scaleY="1.75"
        android:text="@string/logo_II"
        android:textColor="#0366B4"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="135dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/stinger"
        android:inputType="textPersonName"
        android:text="@string/login_name"
        android:textColor="#8C040404"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="425dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="502dp" />

</androidx.constraintlayout.widget.ConstraintLayout>